<% provide(:title, "User Documents") %>
<h1>View Documents</h1>

<div align="right" class="bottom-distance"><%= link_to "Create New Document", new_document_path, class: "btn btn-primary" %></div>

<%= will_paginate @documents %>

<% if !@documents.empty? %>
  <table class="table table-hover">
    <tr>
      <th>Document Name</th>
      <th>Options</th>
    </tr>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td>
          <%= link_to "Download", download_path(document) %> | 
          <%= link_to "Edit", edit_document_path(document) %> | 
          <%= link_to "Delete", document, method: :delete, data: { confirm: "You sure?" } %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <div class="alert alert-info">No document found</div>
<% end %>

<%= will_paginate @documents %>